from os import listdir
import sys
from sys import argv

path = sys.argv[-1]

pageNums = list()
pageOne = False

tsv = "image URN\tpage URN"

n = 0
for eachFile in sorted(listdir(path)):
  if ".tiff" in eachFile:
    fileName = eachFile[:-5]
  else:
    fileName = eachFile[:-4]

  if pageOne == False:
    print fileName
    findPageOne = raw_input("Page 1? Y/n: ")
    if findPageOne == "n" or findPageOne == "N":
      pageNums.append((fileName, ""))
    elif findPageOne == "y" or findPageOne == "Y":
      n = 1
      pageNums.append((fileName, "page 1"))
      pageOne = True
    else:
      print "Bad input"
  else:
    n = n + 1
    pageNums.append((fileName, "page" + str(n)))

print pageNums
print("Remember to fix final images!")
